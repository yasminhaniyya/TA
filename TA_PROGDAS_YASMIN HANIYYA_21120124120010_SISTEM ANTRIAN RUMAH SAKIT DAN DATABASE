// Kelas Antrian dengan <?php
session_start();
$gambar = 'latarbelakang.png';

class Antrian {
    private $queue = [];

    public function tambahAntrian($nama, $gender, $dokter) {
        $lastNumber = 1; //kalau belum ada antiran, dia jadi nomer 1 
        foreach ($this->queue as $data) {
            if ($data['dokter'] === $dokter) {
                $lastNumber = $data['nomor'] + 1; //kalau udah ada antrian nanti lastnumbernya yang terakhir +1
            }
        }

        $data = [
            "nomor" => $lastNumber,
            "nama" => $nama,
            "gender" => $gender,
            "dokter" => $dokter
        ];
        $this->queue[] = $data;
        return $data["nomor"];
    }

    public function hapusAntrian($nomor) {
        foreach ($this->queue as $key => $data) {
            if ($data['nomor'] == $nomor) {
                unset($this->queue[$key]);
                $this->queue = array_values($this->queue);
                return true;
            }
        }
        return false;
    }

    public function tampilkanAntrian() {
        $dokterAntrian = [];
        foreach ($this->queue as $data) {
            $dokterAntrian[$data['dokter']][] = $data;
        }

        echo "<table border='1' style='width:100%; text-align:center;'>
                <tr><th>Dokter</th><th>Nomor Antrian</th><th>Nama</th><th>Jenis Kelamin</th><th>Aksi</th></tr>";
//ngelompokin ke tabel setiap dokter
        foreach ($dokterAntrian as $dokter => $list) {
            foreach ($list as $antrian) {
                $nomor = $antrian["nomor"];
                echo "<tr>
                        <td>$dokter</td>
                        <td>$nomor</td>
                        <td>{$antrian['nama']}</td>
                        <td>{$antrian['gender']}</td>
                        <td>
                            <form method='post' style='display:inline;'>
                                <input type='hidden' name='nomor_hapus' value='$nomor'>
                                <button type='submit' name='hapus' class='button'>Hapus</button>
                            </form>
                        </td>
                      </tr>";
            }
        }
        echo "</table>";
    }

    public function queue($data = null) {
        if ($data !== null) $this->queue = $data;
        return $this->queue;
    }
}

function renderInput($label, $name, $type = "text", $options = []) {
    if ($type === "select") {
        $html = "<label>$label <select name='$name' required>";
        foreach ($options as $value => $text) {
            $html .= "<option value='$value'>$text</option>";
        }
        $html .= "</select></label><br><br>";
    } else {
        $html = "<label>$label <input type='$type' name='$name' required></label><br><br>";
    }
    return $html;
}

function showMessage($message, $color = "black") {
    echo "<p style='color:$color;'>$message</p>";
}

$antrian = new Antrian();
$antrian->queue($_SESSION['antrian'] ?? []);

if (isset($_POST['daftar'])) {
    $nama = $_POST['nama'];
    $gender = $_POST['gender'];
    $dokter = $_POST['dokter'];

    $nomorAntrian = $antrian->tambahAntrian($nama, $gender, $dokter);
    $_SESSION['antrian'] = $antrian->queue();
    showMessage("Anda mendapatkan antrian nomor: $nomorAntrian untuk dokter $dokter.");
}

if (isset($_POST['login'])) {
    $username = $_POST['username'];
    $password = $_POST['password'];
    if ($username === "rumahsakit" && $password === "sukses") {
        $_SESSION['is_logged_in'] = true;
    } else {
        showMessage("Username atau password salah!", "red");
    }
}

if (isset($_POST['logout'])) {
    unset($_SESSION['is_logged_in']);
    showMessage("Anda telah logout.");
}

if (isset($_POST['hapus'])) {
    $nomorHapus = $_POST['nomor_hapus'];
    $antrian->hapusAntrian($nomorHapus);
    $_SESSION['antrian'] = $antrian->queue();
    showMessage("Nomor antrian $nomorHapus telah dihapus.");
}

